pipeline {
    agent {
        docker {
            image 'golang:1.8.3-jessie' 
        }
    }

    environment {
        GOPATH       = "$WORKSPACE/goprojects"
        PROJECT_ROOT = "goprojects/src/github.com/Azure/kubernetes-azure-cloud-controller-manager"
    }

    stages {
        stage('Test') {
            steps {
                sh 'make clean test -C $PROJECT_ROOT'
            }
            post {
                success {
                    junit "${env.PROJECT_ROOT}/testResults/unittest.xml"
                }
            }
        }
    }
}
